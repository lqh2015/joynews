<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zqzx_bg_lgrey"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/stitle_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylerlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?fragment_main_backgroup"
            android:cacheColorHint="@null"
            android:overScrollMode="ifContentScrolls"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical" />


        <LinearLayout
            android:id="@+id/pushmsg_tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:src="@drawable/my_recently_empty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Ada Berita yang Dibaca"
                android:textColor="#bababa"
                android:textSize="19sp" />
        </LinearLayout>

        <View
            android:id="@+id/cover_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/add_transparency"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>
